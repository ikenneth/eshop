<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE validators PUBLIC 
  		"-//Apache Struts//XWork Validator 1.0//EN"
  		"http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
  		
  		
<validators>
    <field name="registration.username">
        <field-validator type="requiredstring">
            <message>Username is required</message>
        </field-validator>
        <field-validator type="forbidden">
            <param name="forbiddenStrings">root,admin,administrator</param>
            <message>You cannot use this username</message>
        </field-validator>
    </field>
    <field name="registration.password1">
        <field-validator type="requiredstring">
            <message>Password is required</message>
        </field-validator>
        <field-validator type="stringlength">
            <param name="minLength">4</param>
            <message>Enter at least 4 characters</message>
        </field-validator>
        <field-validator type="regex">
            <param name="regex">[A-Za-z0-0]+</param>
            <message>Alphanumeric only</message>
        </field-validator>
    </field>
    <field name="registration.password2">
        <field-validator type="requiredstring">
            <message>Confirm password is required</message>
        </field-validator>
        <field-validator type="fieldexpression">
            <param name="expression">(registration.password1 == registration.password2)</param>
            <message>Must be the same as password</message>
        </field-validator>
    </field>
    <field name="registration.firstName">
        <field-validator type="requiredstring">
            <message>First name is required</message>
        </field-validator>
    </field>
    <field name="registration.lastName">
        <field-validator type="requiredstring">
            <message>Last name is required</message>
        </field-validator>
    </field>
    <field name="registration.street">
        <field-validator type="requiredstring">
            <message>First name is required</message>
        </field-validator>
    </field>
    <field name="registration.city">
        <field-validator type="requiredstring">
            <message>Street is required</message>
        </field-validator>
    </field>
    <field name="registration.postCode">
        <field-validator type="requiredstring">
            <message>Post code is required</message>
        </field-validator>
    </field>
</validators>
